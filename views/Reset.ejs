<!--
    This file represents the Reset view of the software project.
    It contains a form for resetting the password.
-->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SAMS | <%= title %>
    </title>
    <link rel="stylesheet" href="/nav.css">
    <link rel="stylesheet" href="/Reset.css">
    <link rel="stylesheet" href="/footer.css">
</head>

<body>
    <%- include('partials/nav') %>
        <form action="/index/resetPassword" class="form" method="post">
            <label for="token">Token</label>
            <input type="text" id="token" name="token" placeholder="Enter Token details sent in the mail">
            <label for="userId">userId</label>
            <input type="text" id="userId" name="userId" placeholder="Enter userId sent in the mail">
            <label for="password">New Password</label>
            <input type="password" id="password" name="password" placeholder="Enter Password">
            <label for="confirm-password">Confirm Password</label>
            <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm Password">
            <p id="message"></p>
            <input type="submit" onclick="checkPassword()" value="SUBMIT">
        </form>

        <script src="/script.js"></script>
        <%- include('partials/footer') %>

</body>

</html>